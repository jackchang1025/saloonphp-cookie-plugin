{
    "name": "weijiajia/saloonphp-cookie-plugin",
    "description": "A cookie management plugin for Saloon PHP, allowing for easy cookie handling in your API integrations.",
    "keywords": ["saloon", "api", "http", "cookie", "cookies", "plugin", "guzzle"],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Weijiajia\\SaloonphpCookiePlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Weijiajia\\SaloonphpCookiePlugin\\Tests\\": "tests/",
            "Tests\\": "tests/" 
        }
    },
    "require": {
        "php": ">=8.0",
        "saloonphp/saloon": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "3.x-dev",
        "symfony/var-dumper": "7.3.x-dev"
    },
    "authors": [
        {
            "name": "weijiajia",
            "email": "shadowmatthew1025@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
 
    "scripts": {
        "test": "vendor/bin/pest",
        "fix-style": "vendor/bin/php-cs-fixer fix"
    }
}
